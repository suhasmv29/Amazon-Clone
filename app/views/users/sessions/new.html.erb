<div class="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form">
        <p style="font-size:24px"><b>Login for user <b></p>
        <h3>Username:</h3>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Username", class:'input' %><br>
        <h3>Password:</h3>
        <%= f.password_field :password, autocomplete: "current-password",placeholder:"Password", class:'input' %>
        <br>
        <% if devise_mapping.rememberable? %>
        <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end %>
        <div class="field">
            <%= f.submit "Log in",class:"session_button"%>
        </div>
        <p>By continuing, you agree to Amazon's Conditions of Use and Privacy Notice. </p>
        <% end %>
        <br>
        <br>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
    </div>
    <div class="sign_up_button">
    <%= render "users/shared/links" %>
    </div>
</div>